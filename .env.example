# ===========================================
# ARUGAMI DASHBOARD - ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env.local and fill in your values

# App URL (for OAuth callbacks)
NEXT_PUBLIC_APP_URL=http://localhost:3001

# Base URL for welcome links (used in admin dashboard)
NEXT_PUBLIC_BASE_URL=http://localhost:3001

# ===========================================
# ADMIN ACCESS
# ===========================================
# Comma-separated list of emails with admin access
# These users can access /admin/* routes
ADMIN_EMAILS=

# OAuth state signing (required)
# Generate a strong secret (32+ chars) and keep it private.
OAUTH_STATE_SECRET=

# Welcome token signing (for client onboarding links)
# Generate a strong secret (32+ chars): node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
WELCOME_TOKEN_SECRET=

# Integration credential encryption (required)
# 32-byte base64 key. Example generation:
#   node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
INTEGRATIONS_ENCRYPTION_KEY=

# ===========================================
# OAUTH CREDENTIALS
# Get these from each provider's developer portal
# ===========================================

# Clover (POS) - https://developer.clover.com
# For sandbox: Use sandbox credentials
# For production: Use production credentials
CLOVER_CLIENT_ID=
CLOVER_CLIENT_SECRET=

# Toast (POS) - https://doc.toasttab.com
TOAST_CLIENT_ID=
TOAST_CLIENT_SECRET=

# Square (POS) - https://developer.squareup.com
SQUARE_CLIENT_ID=
SQUARE_CLIENT_SECRET=

# Mailchimp - https://mailchimp.com/developer
MAILCHIMP_CLIENT_ID=
MAILCHIMP_CLIENT_SECRET=

# Google (for GMB) - https://console.cloud.google.com
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Facebook (for FB Pages + Instagram) - https://developers.facebook.com
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=

# ===========================================
# SUPABASE (Database)
# ===========================================
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# ===========================================
# GHL (CRM)
# ===========================================
# Dashboard reads now come from the kernel (receipts/tasks in Supabase).
# USE_MOCK_GHL is only needed for GHL write operations (QR code tracking).
# Set USE_MOCK_GHL=true if you need mock GHL write responses in dev.
USE_MOCK_GHL=false

# Real GHL credentials (stored per-client in Supabase, not here)
# These are only used as fallback if client doesn't have credentials
GHL_API_KEY=
GHL_LOCATION_ID=

# Webhook validation secret (shared with GHL webhook configuration)
# Required in production; skipped in development if not set
GHL_WEBHOOK_SECRET=

# ===========================================
# STRIPE (Payments)
# ===========================================
# Get these from https://dashboard.stripe.com/apikeys
# Use test keys (sk_test_*, pk_test_*) for development
STRIPE_SECRET_KEY=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=

# Webhook secret - get this after creating webhook endpoint
# Create webhook at: https://dashboard.stripe.com/webhooks
# Point to: https://app.arugami.com/api/stripe/webhook
STRIPE_WEBHOOK_SECRET=
